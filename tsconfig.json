{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
        "es6"
    ]
},
"include": [
    "src/**/*"
]
}